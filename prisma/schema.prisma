generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Trip {
  id String @id @default(uuid())//unique universal id
  destination String
  starts_at DateTime
  ends_at DateTime
  is_confirmed Boolean @default(false)
  created_at DateTime @default(now())
  @@map("trips") //rename database table
}